<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewActivity.AdminAddNewProductActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_settings"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorPrimary">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/close_admin_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Close"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    />

                          <TextView
                               android:id="@+id/petshop_next_btn"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Update"
                               android:textColor="@android:color/white"
                               android:textSize="17sp"
                               android:textStyle="bold"
                               android:layout_marginRight="10dp"
                               android:layout_alignParentEnd="true"
                              android:visibility="invisible"
                              ></TextView>


            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <!-- //Use Here  -->
        <ImageView
            android:id="@+id/select_product_image"
            android:layout_width="132dp"
            android:layout_height="139dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:src="@drawable/select_product_image" />
        <TextView
            android:id="@+id/title_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/select_product_image"
            android:text="logo"
            android:textColor="@color/grey"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_alignParentStart="true"
            />


        <EditText
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_admin"
            android:inputType="textMultiLine"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:hint="Name"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            />


        <EditText
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name"
            android:inputType="textMultiLine"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            android:hint="Description"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            />

        <EditText
            android:id="@+id/shop_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_description"
            android:inputType="textMultiLine"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            android:hint="Location"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            />
        <EditText
            android:id="@+id/shop_location_la"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_location"
            android:inputType="numberDecimal"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            android:hint="Location latitude"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            />
        <EditText
            android:id="@+id/shop_location_long"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_location_la"
            android:inputType="numberDecimal"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            android:hint="Location longtitude"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            />
        <EditText
            android:id="@+id/shop_service_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_location_long"
            android:inputType="textMultiLine"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            android:hint="Service Type"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/input_design"
            />


        <Button
            android:id="@+id/add_new_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_service_type"
            android:text="Add New"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:padding="17dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/buttons"
            />

        <ProgressBar
            android:id="@+id/Add_Product_ProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="78dp"
            android:layout_height="60dp"
            android:layout_below="@id/add_new_product"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-59dp"
            android:visibility="invisible"
            />


    </RelativeLayout>

</ScrollView>





</RelativeLayout>