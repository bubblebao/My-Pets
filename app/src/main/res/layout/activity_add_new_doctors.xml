<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewActivity.AddNewDoctorsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_settings"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorPrimary">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/close_Doctor_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:text="Close"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <!--           <TextView
                               android:id="@+id/petshop_next_btn"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Update"
                               android:textColor="@android:color/white"
                               android:textSize="17sp"
                               android:textStyle="bold"
                               android:layout_marginRight="10dp"
                               android:layout_alignParentEnd="true"
                               /-->

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- //Use Here  -->
            <ImageView
                android:id="@+id/select_Doctor_image"
                android:layout_width="132dp"
                android:layout_height="139dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                android:src="@drawable/select_product_image" />

            <TextView
                android:id="@+id/title_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/select_Doctor_image"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="Insert Doctor  Informations"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/add_Doctor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_admin"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/input_design"
                android:hint="Name"
                android:inputType="textMultiLine"
                android:padding="20dp" />

            <EditText
                android:id="@+id/add_Doctor_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_Doctor_name"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/input_design"
                android:hint="Phone Number"
                android:inputType="number"
                android:padding="20dp" />

            <EditText
                android:id="@+id/add_Doctor_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_Doctor_phone"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/input_design"
                android:hint="Working At"
                android:inputType="textMultiLine"
                android:padding="20dp" />

            <EditText
                android:id="@+id/add_Doctor_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_Doctor_description"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/input_design"
                android:hint="Working address"
                android:inputType="textMultiLine"
                android:padding="20dp" />

            <EditText
                android:id="@+id/add_Doctor_location_la"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_Doctor_location"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/input_design"
                android:hint="Location latitude"
                android:inputType="numberDecimal"
                android:padding="20dp" />

            <EditText
                android:id="@+id/add_Doctor_location_long"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_Doctor_location_la"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/input_design"
                android:hint="Location longtitude"
                android:inputType="numberDecimal"
                android:padding="20dp" />

            <EditText
                android:id="@+id/add_Doctor_specialist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_Doctor_location_long"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/input_design"
                android:hint="Specialist"
                android:inputType="textMultiLine"
                android:padding="20dp" />

            <EditText
                android:id="@+id/add_Doctor_servicetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_Doctor_specialist"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/input_design"
                android:hint="Service time"
                android:inputType="textMultiLine"
                android:padding="20dp" />

            <Button
                android:id="@+id/add_new_Doctor_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_Doctor_servicetime"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/buttons"
                android:padding="17dp"
                android:text="Add New"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ProgressBar
                android:id="@+id/Add_Doctor_ProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="78dp"
                android:layout_height="60dp"
                android:layout_below="@id/add_new_Doctor_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-59dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/emtry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Add_Doctor_ProgressBar"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="Insert"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textSize="25dp"
                android:textStyle="bold"
                android:visibility="invisible" />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>