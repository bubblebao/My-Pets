<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    app:cardUseCompatPadding="false"
    app:contentPadding="5.0dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/ic_rtb_hospital"
        android:scaleType="fitXY"

       />
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Doctor_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Doctor Name"
            android:textAlignment="textStart"
            android:layout_marginLeft="3dp"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/Doctor_description"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Doctor_name"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:text="Doctor Description"
            android:textAlignment="textStart"
            android:textColor="@color/black_grey"
            android:textSize="11dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/Doctor_description"
            android:layout_marginTop="9dp"
            android:src="@drawable/ic_mark_blue" />

        <TextView
            android:id="@+id/Doctor_location"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Doctor_description"
            android:text="Doctor location"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="23dp"
            android:textAlignment="textStart"
            android:textSize="10dp"
            android:textColor="@color/grey" />
        
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/map_mark"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_mark_blue"
            android:visibility="invisible"
            android:layout_marginTop="0dp"/>


        <ImageView
            android:id="@+id/Doctor_rate"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/map_mark"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_rate_star" />


        <TextView
            android:id="@+id/txt_rate"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="4.5"
            android:layout_below="@id/map_mark"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:textAlignment="center"
            android:textSize="10dp"
            android:textStyle="bold"/>



    </RelativeLayout>

    
 </LinearLayout>



</com.google.android.material.card.MaterialCardView>