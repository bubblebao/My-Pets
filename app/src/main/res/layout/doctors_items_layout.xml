<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="false"
    app:contentPadding="5.0dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2.0dp">

        <LinearLayout
            android:background="@color/background_CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/Doctor_imageView"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:scaleType="fitXY"
                android:background="@drawable/ic_doctor_load" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Doctor_Name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Doctor Name"
                    android:textAlignment="textStart"
                    android:layout_marginStart="5dp"
                    android:textSize="13sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Doctor_Description"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Doctor_Name"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Doctor Description"
                    android:textAlignment="textStart"
                    android:textColor="@color/black_grey"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/Doctor_Description"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/ic_mark_blue" />

                <TextView
                    android:id="@+id/Doctor_location"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Doctor_Description"
                    android:text="Doctor location"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="23dp"
                    android:textAlignment="textStart"
                    android:textSize="13sp"
                    android:textColor="@color/grey" />

                <ImageView
                    android:id="@+id/Doctor_star"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/ic_rate_star" />

                <TextView
                    android:id="@+id/Doctor_Rating"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Doctor_star"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="center"
                    android:text="4.5"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>