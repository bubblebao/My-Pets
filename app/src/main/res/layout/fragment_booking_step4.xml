<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pink"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <!--tools:context=".BookingFragment.BookingStep1Fragment"> -->

    <!--ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/mypet_logo" /-->



    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/rounded_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/confirm_information"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Thank you for booking"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Booking information"
            android:layout_marginStart="15dp"
            android:layout_marginVertical="15dp"
            android:textAlignment="center"
            android:textSize="18sp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_appointments"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/txt_confirm_doctor_time"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="10.00 at 30/01/2020"
                android:textAlignment="center"
                android:textSize="15dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_doctor_load" />

            <TextView
                android:id="@+id/txt_confirm_doctor_name"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="David"
                android:textAlignment="center"
                android:textSize="15dp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            android:background="@color/grey"
            />

        <TextView
            android:id="@+id/txt_confirm_hospital_name"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Hospital name"
            android:layout_gravity="start"
            android:textSize="18sp"
            android:textStyle="bold"
            />


        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_phone_detial" />

            <TextView
                android:id="@+id/txt_confirm_hospital_phone"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="+66235656565"
                android:textAlignment="center"
                android:textSize="15dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_clock" />

            <TextView
                android:id="@+id/txt_confirm_hospital_servicetime"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="7dp"
                android:text="9.00 - 19.00"
                android:textAlignment="center"
                android:textSize="15dp"
                />


        </LinearLayout>


        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_mark_blue" />

            <TextView
                android:id="@+id/txt_confirm_hospital_address"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="Kathu"
                android:textAlignment="center"
                android:textSize="15dp"
                />


        </LinearLayout>

        <Button
            android:text="CONFIRM"
            android:id="@+id/book_comfirm_button"
            android:layout_marginTop="15dp"
            android:background="@color/colorButton"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>

</LinearLayout>